@model  EmployeeRegister2._0.Models.Employee
@{
    ViewBag.Title = "Create";
}

<h2>Novo funcionário</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <!-- EMPLOYEE ID DIV-->
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.EmployeeId, new { htmlAttributes = new { @class = "form-control", @id = "id" } })
                    @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- EMPLOYEE FIRST NAME DIV-->
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeFirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.EmployeeFirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeFirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- EMPLOYEE LAST NAME DIV-->
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeLastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.EmployeeLastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeLastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- EMPLOYEE EMAIL DIV-->
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.EmployeeEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- EMPLOYEE PASSWORD DIV-->
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeePassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.EmployeePassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeePassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- DEPARTMENT SELECT-->
            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div  class="col-md-3 col-lg-3">
                    <select id="departmentName" class = "form-control" name="DepartmentId">
                        <option value="" selected>Nenhum</option>
                        <option value="1">Administrativo</option>
                        <option value="2">TI</option>
                        <option value="3">RH</option>
                        <option value="4">Financeiro</option>
                    </select>
                </div>
            </div>

            <!-- EMPLOYEE SUBMIT BUTTON-->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" value="Adicionar" class="btn btn-outline-success">Adicionar</button>
                </div>
            </div>
        </fieldset>
    </div>
    <p style="text-align: center">
        @Html.ActionLink("Voltar para a lista", "Index")
    </p>
}


